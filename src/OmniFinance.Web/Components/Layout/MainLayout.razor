@using Microsoft.AspNetCore.Authorization
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<FluentLayout>
    <FluentHeader>
        <FluentToolbar style="width:100%;background-color:steelblue">
            <AuthorizeView>
                <NotAuthorized>
                    <FluentButton IconEnd="@(new Icons.Regular.Size16.Globe())" OnClick="@NavigateToLoginAsync" Appearance="Appearance.Accent" Slot="end">Log In</FluentButton>
                </NotAuthorized>
                <Authorized>
                    <FluentPersona Name="@context.User.Identity?.Name" ImageSize="30px" Slot="end" />
                </Authorized>
            </AuthorizeView>
        </FluentToolbar>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        </div>
        <div class="link2">
            <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
        </div>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    async void NavigateToLoginAsync()
    {
        NavigationManager.NavigateTo("authentication/login", true);
    }
}